(:Comment)-[:hasCreator]->(:Person),

(:Comment)-[:isLocatedIn]->(:Country),

(:Comment)-[:replyOf]->(<:Message),

(:Person)-[:likes { creationDate :: ZONED DATETIME }]->(<:Message),

